<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_classmatelogo"
            android:tag="image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_classmatelogo" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            asyncText="@{@string/classmate}"
            fontPath='@{"fonts/break_bold.ttf"}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:tag="text"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_image_view"
            tools:text="@string/classmate"
            tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>